<?xml version="1.0" encoding="utf-8"?>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewEntretiens"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_above="@id/button_create_entretien"
                    android:layout_below="@+id/editTextNomRecruteur"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="-23dp"
                    android:gravity="center" />

                <Button
                    android:id="@+id/button_create_entretien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Créer un nouvel entretien"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="16dp"/>

                <!-- Champs de recherche avancée -->

                <Button
                    android:id="@+id/buttonBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="278dp"
                    android:layout_marginTop="16dp"
                    android:text="Retour" />

                <EditText
                    android:id="@+id/editTextDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Entrez la date"
                    android:layout_below="@id/buttonBack"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/editTextLieu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Entrez le lieu"
                    android:layout_below="@id/editTextDate"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/editTextNomRecruteur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editTextLieu"
                    android:layout_marginTop="0dp"
                    android:hint="Entrez le nom du recruteur" />

            </RelativeLayout>